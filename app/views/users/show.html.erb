<div class="user">
  <%= render partial: "users/user_info", locals: { user: @user } %>
</div>

<div id="user_bio">
  <h3>Bio</h3>
  <p><%= @user.bio %></p>
</div>

<div id="posts_container">
  <% @user.three_recent_posts.each do |post| %>
    <li>
      <%= link_to user_post_path(@user, post), class: "post", id: post.id do %>
        <%= render partial: "posts/post_info", locals: { post: post } %>
      <% end %>
    </li>
  <% end %>
</div>

<%= link_to "See all posts", user_posts_path(@user, page: 1) %>
