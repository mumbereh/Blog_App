<h1>New Post</h1>

<%= form_for([@user, @post]) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :text %>
    <%= f.text_area :text %>
  </div>

  <%= f.submit "Create Post" %>
<% end %>

<%= button_to "Cancel", user_posts_path(@user), method: :get, class: "btn btn-secondary" %>
