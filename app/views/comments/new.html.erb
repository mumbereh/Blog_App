<%= form_with model: [:user, @post, @comment], url: user_post_comments_path(user_id: params[:user_id], post_id: params[:post_id]), data: { turbo: false }, local: true do |f| %>
  <div>
    <%= f.label :text %><br>
    <%= f.text_field :text %><br>
    <%= f.hidden_field :user_id, value: params[:user_id] %>
    <%= f.hidden_field :post_id, value: params[:post_id] %>
    <%= f.submit "Comment" %>
  </div>
<% end %>
